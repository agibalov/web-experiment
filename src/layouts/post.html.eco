<!doctype html>
<html>
	<head>
		<title><%= @document.title %></title>
		<link rel="stylesheet" href="/css/bootstrap.min.css">
	</head>
	<body>
		<div class="container">
			<div class="row">				
				<div class="col-xs-10">
					<h1><%= @document.title %></h1>
					<%- @content %>
				</div>
				<div class="col-xs-2">
					<h4>Other posts</h4>
					<ul class="list-unstyled">
					<% for post in @getCollection("html").findAll({isPost:true}).toJSON(): %>
						<li><a href="<%= post.url %>"><%= post.title %></a></li>
					<% end %>
					</ul>
				</div>
			</div>
			<%- @partial("footer") %>
		</div>
	</body>
</html>
